                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_adjust_grey_8dp"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Phone        "
                            android:textSize="12sp"
