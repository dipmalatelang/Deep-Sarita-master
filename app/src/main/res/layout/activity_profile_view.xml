                    android:layout_marginEnd="8dp"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="390dp"
                        android:layout_height="match_parent"
                        android:padding="8dp">

